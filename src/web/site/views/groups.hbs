<div class="groups">
    
    {{#if groups}}
    <div class="item">
        <h1>Your Groups</h1>
        <ul>
            {{#each groups}}
            <li class="group">
                <h2><a href="./groups/{{id}}">{{name}}</a></h2>
                    <h3>{{description}}</h3>
                    <ul>
                        {{#each movies}}
                        <li>{{title}}</li>
                        {{/each}}
                    </ul>
                    
                    <button onclick="onDeleteGroup('{{../token}}', '{{id}}')" class="fa fa-trash" id="delete-group"></button>
                </h2>
            </li>
            {{/each}}
        </ul>
    </div>
    {{/if}}

    <div class="item">
        <h1>Create New Group</h1>
        <form action="/groups" method="POST">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required/> 
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" required/>
            <br>
            <button type="submit" id="create-group-btn">Create</button>
        </form>
    </div>
</div>

     
